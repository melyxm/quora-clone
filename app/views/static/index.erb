<% if current_user %>

  <h1>Welcome <a href="users/<%= "#{current_user.id}" %>"><%=current_user.full_name%></a></h1>
  <form action='/logout' method = 'post'>
  <input type="submit" value="Log Out">
  <form>
<% else %>

<div class="center">
  <h2>Sign up for an account!</h2>
  <!-- <%= @error %> -->
  <form method="post" action="/signup">
      <input type=text placeholder="Full Name" name="full_name"><br>
      <input type=text placeholder="Email" name="user_email"><br>
      <input type=password placeholder="Password" name="password"></br>
      <input class="btn btn-warning btn-mel" type=submit value="Sign up">
  </form>
  <a href="/login">Login</a>
<% end %>
</div>
